#include <bits/stdtr1c++.h>
using namespace std;

int main()
{
 int t,n,i,j,k;
 cin>> t;
 for( i=0;i<t;i++){
    cin>> n;
    int a[n];
    int c= n%2;
    if (n==3){
        cout<< "NO \n";
    }
    else{
            if(c==0){
            cout<< "YES\n";
         for (j=0;j<n;j++){
             int x= j%2;
        if ( x==0){
            a[j]=1;
        }
        else{
            a[j]=-1;
        }
    }
    }
    else{
                  cout<< "YES\n";
         for (j=0;j<n;j++){
             int x= j%2;
        if ( x==0){
            a[j]=n/2-1;
        }
        else{
            a[j]=-(n/2);
        }
    }
    }
 for(k=0;k<n;k++){
    cout<< a[k]<< " ";
 }
 cout<<"\n";
 }
 }
}
